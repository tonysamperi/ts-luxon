{
    "include": [
        "src"
    ],
    "exclude": [
        "test"
    ],
    "compilerOptions": {
        "module": "CommonJS",
        "target": "es6",
        "lib": [
            "esnext",
            "ESNext.Intl"
        ],
        "allowJs": true,
        "importHelpers": false,
        "declaration": true,
        "sourceMap": true,
        "rootDir": "./src",
        "baseUrl": "./",
        "strict": true,
        "noUnusedLocals": true,
        "noUnusedParameters": true,
        "noImplicitReturns": true,
        "strictNullChecks": false,
        "skipLibCheck": true,
        "moduleResolution": "node",
        "esModuleInterop": true,
        "outDir": "dist"
    }
}
