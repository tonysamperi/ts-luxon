{
    "include": [
        "src"
    ],
    "exclude": [
        "test"
    ],
    "compilerOptions": {
        "module": "CommonJS",
        "target": "es5",
        "lib": [
            "esnext"
        ],
        "allowJs": true,
        "importHelpers": false,
        "declaration": true,
        "sourceMap": true,
        "rootDir": "./src",
        "strict": true,
        "noUnusedLocals": true,
        "noUnusedParameters": true,
        "noImplicitReturns": true,
        "strictNullChecks": false,
        "skipLibCheck": true,
        "moduleResolution": "node",
        "baseUrl": "./",
        "paths": {
            "intl-next": [
                "./src/types/intl-next"
            ],
            "ts-luxon": [
                "./dist"
            ],
            "ts-luxon/*": [
                "./dist/*"
            ]
        },
        "esModuleInterop": true,
        "outDir": "dist"
    }
}
